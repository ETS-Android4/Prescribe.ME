<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProfile">

    <TextView
        android:id="@+id/ViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:textColor="@color/foreground"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewFNameLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewHeader">

        <TextView
            android:id="@+id/txtFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:fontFamily="@font/baumans"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="First Name: "
            android:textColor="@color/foreground"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewFName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:fontFamily="@font/berkshire_swash"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:text="@string/blank_value"
            android:textColor="@color/foreground"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewLNameLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFNameLL">

        <TextView
            android:id="@+id/txtLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="Last Name: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="@string/blank_value"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewAadharNoLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLNameLL">

        <TextView
            android:id="@+id/txtAadharNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="Aadhar No: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewAadharNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="@string/blank_value"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewQualificationsLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAadharNoLL">

        <TextView
            android:id="@+id/txtQualifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="Qualifications: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewQualifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="@string/blank_value"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewRegistrationNoLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewQualificationsLL">

        <TextView
            android:id="@+id/txtRegistrationNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="Registration No: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewRegistrationNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="@string/blank_value"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewClinicLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewRegistrationNoLL">

        <TextView
            android:id="@+id/txtClinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="Clinic/Hospital: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewClinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="@string/blank_value"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewContactLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewClinicLL">

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="Contact Info: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/foreground"
            android:text="@string/blank_value"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewContactLL"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnViewUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="Update Profile"
            app:backgroundTint="@color/foreground"
            android:layout_marginBottom="8sp"/>

        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="Home"
            app:backgroundTint="@color/foreground"
            android:layout_marginTop="8sp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>